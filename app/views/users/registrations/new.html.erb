<style>
body {
  margin: auto;
  background: #eaeaea;
  font-family: 'Open Sans', sans-serif;
}
</style>
<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :last_name%>
  </div>
  <div class="field">
    <%= f.label :correo_electronico %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div class="field">
    <%=f.check_box :company%>
    <%=f.label :quiero_registrarme_como_empresa%>
  </div>
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
